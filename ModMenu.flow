int PlayerMenuDisplay()
{
	while(true) 
	{
		int selection = SEL_GENERIC_EX( 11, 8, 12, 1, 0 );
		switch (selection)
		{
			case 0:
				Rename();
				return 0;
			case 1:
				if (DateSelect() == -1)
					break;
				else
					return 0;
			case 2:
				if (ChangeYen() == -1)
					break;
				else
					return 0;
			case 3:
				if (ChangeItem() == -1)
					break;
				else
					return 0;
			case 4:
				if (AddMember() == -1)
					break;
				else
					return 0;
			case 5:
				if (RemoveMember() == -1)
					break;
				else
					return 0;
			case 6:
				SetMaxHPSP();
				return 0;
            case -1:
                return -1;
		}
	}
	return -1;
}

